<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.viralpatel.android.imagegalleray"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk 
        android:minSdkVersion="12" 
        android:targetSdkVersion="18"/>
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

     <application
        android:allowBackup="true"
        android:icon="@drawable/logo_etf"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity android:name="com.example.imagegallery.MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.imagegallery.ImageGalleryDemoActivity"
                  android:label="@string/app_name">
        </activity>
        <activity android:name="com.example.imagegallery.dialogs.Test"
                  android:label="@string/app_name">
        </activity>

    </application>
</manifest>